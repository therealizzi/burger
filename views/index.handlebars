
<div class="container-fluid">
  <div class="row">

    <img class="img-fluid center-block" src="../../assets/burger2.png" alt="cartoon burger" style="width:150px;height:150px;">
  </div>
</div>

{{!-- THIS IS THE HEADER OF THE PAGE --}}

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3 col-md-4">
    </div>  
    <h1 class="col-xs-6 col-md-4 text-center header">Eat-Da-Burger!</h1>
      <div class="col-xs-3 col-md-4">
      </div> 
    </div>  
  </div>
</div>

{{!-- THIS IS THE NOT-DEVOURED SECTION --}}

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <div class="col-xs-8 col-md-8">
                <div id="burgerbox" class="text-center panel panel-default">
                {{this.id}}  {{this.burger_name}}
                </div>
              </div>
              <div class="col-xs-4 col-md-4">
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" id="burgerbutton" class="btn-danger">Devour It!</button>
              </form>
            </div>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

{{!-- THIS IS THE DEVOURED SECTION --}}

    <div class="col-xs-6 col-md-6">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <div class="col-xs-8 col-md-8">
                <div id="burgerbox" class="text-center panel panel-default">
                {{this.id}}  {{this.burger_name}}
                </div>
              </div>
              <div class="col-xs-4 col-md-4">
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                    <button type="submit" id="burgerbutton" class="btn-success">Make It!
                    </button>
                </form>
              </div>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

{{!-- THIS IS THE ADD NEW BURGER SECTION --}}

  <div class="row">
    <div class="col-xs-4 col-md-4">
    </div>
      <div class="col-xs-4 col-md-4">
        <form class="create-update-form text-center" action="/" method="POST">
          <div class="form-group">
          <input type="text" id="ca" class="newburger" name="name">
          </div> 
          <button type="submit" class="btn-primary">Submit</button>
        </form>
      <h5 class="text-center ">Type in a burger name!</h5>
    </div>
  </div>
</div>